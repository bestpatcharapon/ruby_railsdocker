<section class="experience-section" id="experience">
  <div class="section-header">
    <%= icon("briefcase", size: 24, color: "#9b59b6") %>
    <h2>Experience</h2>
  </div>
  <p class="section-subtitle">My professional journey and internship experiences</p>

  <div class="timeline">
    <% experiences.each_with_index do |exp, index| %>
      <%= render "homepage/partials/timeline_item",
          experience: exp,
          active: index == 0 %>
    <% end %>
  </div>
</section>
