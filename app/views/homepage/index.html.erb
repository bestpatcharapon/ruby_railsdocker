    <script>
        // Typing Animation for Name (Infinite Loop with Multiple Texts)
        document.addEventListener('DOMContentLoaded', function() {
            const typingElement = document.getElementById('typingName');
            const textsToType = [
                "Hello everyone!",
                "I'm Best Patcharapon",
                "Software Developer | Software Tester",
                "Welcome to my Resume",
                "Nice to meet you!"
            ];
            let textIndex = 0;
            let charIndex = 0;
            let isDeleting = false;

            // เคลียร์ข้อความเริ่มต้นแล้วเริ่มพิมพ์ใหม่
            typingElement.textContent = '';

            function typeLoop() {
                const currentText = textsToType[textIndex];

                if (!isDeleting) {
                    // Typing forward
                    if (charIndex < currentText.length) {
                        typingElement.textContent = currentText.substring(0, charIndex + 1);
                        charIndex++;
                        setTimeout(typeLoop, 100);
                    } else {
                        // Finished typing, wait then start deleting
                        setTimeout(() => {
                            isDeleting = true;
                            typeLoop();
                        }, 2000);
                    }
                } else {
                    // Deleting
                    if (charIndex > 0) {
                        typingElement.textContent = currentText.substring(0, charIndex - 1);
                        charIndex--;
                        setTimeout(typeLoop, 50);
                    } else {
                        // Finished deleting, move to next text
                        isDeleting = false;
                        textIndex = (textIndex + 1) % textsToType.length;
                        setTimeout(typeLoop, 500);
                    }
                }
            }

            // Start typing after a short delay
            setTimeout(typeLoop, 800);
        });

        // Ghost Popup Animation
        document.addEventListener('DOMContentLoaded', function() {
            const ghostPopup = document.getElementById('ghostPopup');

            // Show popup with animation
            setTimeout(() => {
                ghostPopup.classList.add('show');
            }, 500);

            // Hide popup after 3 seconds
            setTimeout(() => {
                ghostPopup.classList.add('hide');

                // Remove from DOM after animation completes
                setTimeout(() => {
                    ghostPopup.style.display = 'none';
                }, 500);
            }, 3500);
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
