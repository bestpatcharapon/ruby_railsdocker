        /* Reset and Base Styles */
        * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }

        :root {
          --color-bg: #E8E4DC;
          --color-foreground: #3D3830;
          --color-card: #F2F0EC;
          --color-card-border: #D1CAC0;
          --color-primary: #6B604F;
          --color-primary-light: #FAF8F5;
          --color-muted: #A29A8E;
          --color-accent: #728559;
          --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
          --radius-lg: 0.75rem;
          --radius-xl: 1rem;
          --radius-2xl: 1.5rem;
          --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
          --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
          --spacing-xs: 0.25rem;
          --spacing-sm: 0.5rem;
          --spacing-md: 0.75rem;
          --spacing-lg: 1rem;
          --spacing-xl: 1.5rem;
          --transition: all 0.3s ease;
        }

        html { scroll-behavior: smooth; }

        body {
          font-family: var(--font-sans);
          background-color: var(--color-bg);
          color: var(--color-foreground);
          line-height: 1.5;
          min-height: 100vh;
          padding: var(--spacing-sm);
          -webkit-font-smoothing: antialiased;
          -moz-osx-font-smoothing: grayscale;
        }

        .bento-container {
          max-width: 1200px;
          width: 100%;
          margin: 0 auto;
          padding: 0 var(--spacing-sm);
        }

        .header {
          display: flex;
          flex-wrap: wrap;
          gap: 0.5rem;
          justify-content: center;
          padding: 0.5rem;
          background-color: var(--color-card);
          border: 1px solid var(--color-card-border);
          border-radius: var(--radius-xl);
          box-shadow: var(--shadow-sm);
          width: fit-content;
          margin-left: auto;
          margin-right: auto;
          margin-bottom: var(--spacing-md);
        }

        .nav-link {
          height: 2.25rem;
          padding: 0.5rem 1rem;
          display: flex;
          align-items: center;
          gap: 0.5rem;
          border-radius: var(--radius-xl);
          transition: var(--transition);
          color: var(--color-foreground);
          font-size: 0.875rem;
          font-weight: 500;
          text-decoration: none;
          border: none;
          background: transparent;
          cursor: pointer;
          white-space: nowrap;
        }

        .nav-link:hover { background-color: rgba(114, 133, 89, 0.1); }
        .nav-link.active {
          background-color: var(--color-primary);
          color: var(--color-primary-light);
          box-shadow: var(--shadow-sm);
        }
        .nav-link svg { width: 1rem; height: 1rem; }

        .main-content {
          display: flex;
          flex-direction: column;
          gap: var(--spacing-sm);
        }

        .profile-info-section { margin-bottom: var(--spacing-lg); }

        .profile-grid {
          display: grid;
          grid-template-columns: 1fr;
          gap: var(--spacing-lg);
          align-items: center;
        }

        @media (min-width: 1024px) {
          .profile-grid {
            grid-template-columns: 0.85fr 1.15fr;
            gap: var(--spacing-lg);
            align-items: center;
          }
        }

        .profile-image-container {
          position: relative;
          aspect-ratio: 1;
          max-width: 300px;
          margin: 0 auto;
          border-radius: var(--radius-xl);
          overflow: hidden;
          border: 3px solid var(--color-card);
          box-shadow: var(--shadow-sm);
        }

        .profile-image {
          width: 100%;
          height: 100%;
          object-fit: cover;
          transition: var(--transition);
        }

        .profile-image-container:hover .profile-image { transform: scale(1.05); }

        .profile-overlay {
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background: linear-gradient(to bottom, transparent 0%, transparent 50%, rgba(61, 56, 48, 0.75) 100%);
          display: flex;
          align-items: flex-end;
          justify-content: center;
          opacity: 0;
          transition: opacity 0.3s ease;
          border-radius: var(--radius-xl);
          pointer-events: none;
        }

        .profile-image-container:hover .profile-overlay { opacity: 1; }

        .profile-name {
          color: white;
          font-size: 1.5rem;
          font-weight: 700;
          text-align: center;
          padding: 1.5rem 1rem;
          text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        }

        .internship-badge {
          position: absolute;
          top: 1rem;
          right: 1rem;
          background-color: #728559;
          color: white;
          padding: 0.5rem 0.75rem;
          border-radius: var(--radius-lg);
          font-size: 0.875rem;
          font-weight: 500;
          box-shadow: var(--shadow-md);
          display: flex;
          align-items: center;
          gap: 0.375rem;
          z-index: 10;
        }

        .internship-badge svg { width: 1rem; height: 1rem; }

        .profile-info {
          display: flex;
          flex-direction: column;
          gap: var(--spacing-sm);
        }

        .profile-header h1 {
          font-size: clamp(1.5rem, 4vw, 2rem);
          font-weight: 700;
          margin-bottom: 0.25rem;
          color: var(--color-foreground);
          line-height: 1.2;
        }

        .profile-header .role {
          font-size: clamp(0.875rem, 2.5vw, 1rem);
          color: var(--color-muted);
          display: flex;
          align-items: center;
          gap: 0.375rem;
          margin-bottom: var(--spacing-xs);
        }

        .profile-header .role svg { color: var(--color-accent); width: 1.25rem; height: 1.25rem; }
        .profile-header .description { font-size: 0.875rem; line-height: 1.5; color: rgba(61, 56, 48, 0.8); }

        .info-grid {
          display: grid;
          grid-template-columns: repeat(2, 1fr);
          gap: 0.625rem;
          margin-top: var(--spacing-sm);
        }

        .info-card {
          background-color: rgba(242, 240, 236, 0.5);
          border: 1px solid var(--color-card-border);
          border-radius: var(--radius-lg);
          padding: 0.625rem;
          display: flex;
          align-items: flex-start;
          gap: 0.5rem;
          transition: var(--transition);
        }

        .info-card:hover { background-color: var(--color-card); }
        .info-card svg { color: var(--color-muted); flex-shrink: 0; margin-top: 0.125rem; }
        .info-card h3 { font-size: 0.75rem; color: var(--color-muted); margin-bottom: 0.25rem; font-weight: 400; }
        .info-card p { font-size: 0.9375rem; font-weight: 500; color: var(--color-foreground); margin: 0; }

        .action-buttons {
          display: flex;
          flex-wrap: wrap;
          gap: 0.75rem;
          margin-top: var(--spacing-sm);
        }

        .btn {
          display: inline-flex;
          align-items: center;
          gap: 0.375rem;
          padding: 0.5rem 1rem;
          border-radius: var(--radius-lg);
          font-weight: 600;
          font-size: 0.875rem;
          text-decoration: none;
          transition: var(--transition);
          cursor: pointer;
        }

        .btn svg { width: 1.25rem; height: 1.25rem; }

        .btn-primary {
          background-color: var(--color-primary);
          color: var(--color-primary-light);
          box-shadow: var(--shadow-sm);
          border: none;
        }

        .btn-primary:hover { background-color: #5A4F40; }

        .btn-outline {
          background-color: var(--color-card);
          border: 1px solid var(--color-card-border);
          color: var(--color-foreground);
        }

        .btn-outline:hover { background-color: rgba(209, 202, 192, 0.3); }

        .skills-section { margin-top: var(--spacing-md); }

        .skills-grid {
          display: grid;
          grid-template-columns: 1fr;
          gap: var(--spacing-md);
        }

        @media (min-width: 1024px) {
          .skills-grid { grid-template-columns: 1fr 1fr; gap: var(--spacing-md); }
        }

        .card {
          background-color: var(--color-card);
          border: 1px solid var(--color-card-border);
          border-radius: var(--radius-xl);
          padding: 0.75rem;
          box-shadow: var(--shadow-sm);
        }

        .card-header {
          display: flex;
          align-items: center;
          gap: 0.375rem;
          font-weight: 600;
          font-size: 1rem;
          color: var(--color-foreground);
          margin-bottom: 0.5rem;
          padding-bottom: 0.5rem;
          border-bottom: 1px solid var(--color-card-border);
        }

        .card-header svg { width: 1.25rem; height: 1.25rem; }

        .skills-list { display: flex; flex-direction: column; gap: 0.5rem; }

        .skill-item {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          color: var(--color-foreground);
          font-size: 0.875rem;
          transition: var(--transition);
          cursor: default;
        }

        .skill-item::before { content: ">"; font-weight: 700; color: var(--color-muted); }
        .skill-item:hover { color: var(--color-accent); }

        .skills-grid-two-col { display: grid; grid-template-columns: repeat(2, 1fr); gap: 0.75rem; }
        @media (max-width: 640px) { .skills-grid-two-col { grid-template-columns: 1fr; } }

        .skill-item-enhanced {
          padding: 0.875rem;
          border-radius: var(--radius-lg);
          background-color: rgba(242, 240, 236, 0.4);
          transition: var(--transition);
          border: 1px solid transparent;
        }

        .skill-item-enhanced:hover {
          background-color: rgba(114, 133, 89, 0.08);
          border-color: rgba(114, 133, 89, 0.2);
          transform: translateY(-2px);
          box-shadow: var(--shadow-sm);
        }

        .skill-item-enhanced:nth-child(odd) { background-color: rgba(242, 240, 236, 0.5); }
        .skill-header { display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem; }
        .skill-icon { font-size: 1rem; color: var(--color-accent); flex-shrink: 0; }
        .skill-name { font-size: 0.875rem; font-weight: 500; color: var(--color-foreground); }

        .skill-bar {
          width: 100%;
          height: 6px;
          background-color: rgba(209, 202, 192, 0.4);
          border-radius: 3px;
          overflow: hidden;
        }

        .skill-progress {
          height: 100%;
          background: linear-gradient(90deg, var(--color-accent) 0%, #8ba366 100%);
          border-radius: 3px;
          transition: width 0.8s ease-out;
          position: relative;
        }

        .skill-progress::after {
          content: '';
          position: absolute;
          top: 0; left: 0; right: 0; bottom: 0;
          background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
          animation: shimmer 2s infinite;
        }

        @keyframes shimmer { 0% { transform: translateX(-100%); } 100% { transform: translateX(100%); } }

        .search-bar-container { position: relative; margin-bottom: var(--spacing-md); }
        .search-icon { position: absolute; left: 0.75rem; top: 50%; transform: translateY(-50%); color: var(--color-muted); width: 1rem; height: 1rem; }

        .search-input {
          width: 100%;
          padding: 0.625rem 1rem 0.625rem 2.5rem;
          border: 1px solid var(--color-card-border);
          border-radius: var(--radius-lg);
          background-color: var(--color-bg);
          color: var(--color-foreground);
          font-family: inherit;
          font-size: 0.875rem;
          outline: none;
          transition: var(--transition);
        }

        .search-input:focus { border-color: var(--color-accent); box-shadow: 0 0 0 3px rgba(114, 133, 89, 0.1); }
        .search-input::placeholder { color: var(--color-muted); }

        .tech-tags { display: flex; flex-wrap: wrap; gap: 0.5rem; margin-bottom: var(--spacing-md); }

        .tag {
          background-color: rgba(114, 133, 89, 0.2);
          color: var(--color-foreground);
          padding: 0.375rem 0.75rem;
          border-radius: 0.375rem;
          font-size: 0.875rem;
          font-weight: 500;
          cursor: pointer;
          transition: var(--transition);
          border: 1px solid rgba(114, 133, 89, 0.3);
        }

        .tag:hover { background-color: rgba(114, 133, 89, 0.3); }
        .footer-note { font-size: 0.875rem; color: rgba(61, 56, 48, 0.7); line-height: 1.6; }

        .experience-section { margin-top: var(--spacing-xl); }
        .section-header { display: flex; align-items: center; gap: 0.625rem; margin-bottom: 0.5rem; }
        .section-header svg { width: 1.5rem; height: 1.5rem; color: var(--color-accent); }
        .section-header h2 { font-size: 1.5rem; font-weight: 700; color: var(--color-foreground); margin: 0; }
        .section-subtitle { font-size: 0.9375rem; color: var(--color-muted); margin-bottom: var(--spacing-xl); margin-left: 2.125rem; }

        .timeline { position: relative; padding-left: 2rem; }
        .timeline::before {
          content: '';
          position: absolute;
          left: 9px; top: 0; bottom: 0;
          width: 2px;
          background: linear-gradient(to bottom, var(--color-accent) 0%, var(--color-card-border) 50%, transparent 100%);
        }

        .timeline-item { position: relative; margin-bottom: var(--spacing-xl); }
        .timeline-item:last-child { margin-bottom: 0; }

        .timeline-marker {
          position: absolute;
          left: -2rem; top: 0.625rem;
          width: 20px; height: 20px;
          border-radius: 50%;
          background-color: var(--color-card);
          border: 3px solid var(--color-muted);
          box-shadow: 0 0 0 4px var(--color-bg);
          z-index: 1;
        }

        .timeline-marker.active {
          border-color: var(--color-accent);
          background-color: var(--color-accent);
          box-shadow: 0 0 0 4px var(--color-bg), 0 0 0 8px rgba(114, 133, 89, 0.2);
          animation: pulse 2s infinite;
        }

        @keyframes pulse {
          0%, 100% { box-shadow: 0 0 0 4px var(--color-bg), 0 0 0 8px rgba(114, 133, 89, 0.2); }
          50% { box-shadow: 0 0 0 4px var(--color-bg), 0 0 0 12px rgba(114, 133, 89, 0.1); }
        }

        .timeline-content {
          padding: 1rem;
          transition: var(--transition);
          position: relative;
          overflow: hidden;
        }

        .timeline-content::before {
          content: '';
          position: absolute;
          left: 0; top: 0; bottom: 0;
          width: 4px;
          background: var(--color-card-border);
          transition: var(--transition);
        }

        .timeline-content:hover::before, .timeline-content.active::before { background: var(--color-accent); }
        .timeline-content:hover { transform: translateX(4px); box-shadow: var(--shadow-md); }

        .timeline-period {
          display: inline-block;
          font-size: 0.75rem;
          font-weight: 600;
          color: var(--color-accent);
          background-color: rgba(114, 133, 89, 0.1);
          padding: 0.25rem 0.625rem;
          border-radius: 0.375rem;
          margin-bottom: 0.5rem;
          border: 1px solid rgba(114, 133, 89, 0.2);
        }

        .timeline-title { font-size: 1.125rem; font-weight: 600; color: var(--color-foreground); margin-bottom: 0.375rem; line-height: 1.3; }
        .timeline-location { font-size: 0.875rem; color: var(--color-muted); margin-bottom: 0.625rem; display: flex; align-items: center; gap: 0.375rem; }
        .timeline-location i { font-size: 0.875rem; color: var(--color-accent); }
        .timeline-description { font-size: 0.875rem; line-height: 1.6; color: rgba(61, 56, 48, 0.8); margin-bottom: var(--spacing-md); }
        .timeline-tags { display: flex; flex-wrap: wrap; gap: 0.375rem; }
        .timeline-tags .tag { font-size: 0.75rem; padding: 0.25rem 0.5rem; }

        @media (max-width: 640px) {
          body { padding: var(--spacing-sm); }
          .bento-container { padding: 0; }
          .header { width: 100%; }
          .nav-link span { display: none; }
          .profile-header h1 { font-size: 2rem; }
          .info-grid { grid-template-columns: 1fr; }
          .action-buttons { flex-direction: column; }
          .btn { width: 100%; justify-content: center; }
        }

        /* Typing Animation Styles */
        .typing-name {
            display: inline-block;
            border-right: 3px solid #5c6f3d;
            animation: blink-cursor 0.75s step-end infinite;
            white-space: nowrap;
            overflow: hidden;
            min-height: 1.2em;
        }

        @keyframes blink-cursor {
            from, to { border-right-color: #5c6f3d; }
            50% { border-right-color: transparent; }
        }
    </style>
</head>
